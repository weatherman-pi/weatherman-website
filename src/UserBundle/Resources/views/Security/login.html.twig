{% extends "@App/base.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

 {% block stylesheets %}
     <link rel="stylesheet" type="text/css" href="{{ asset('assets/login.css') }}" />
 {% endblock %}

{% block body %}
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form class="form-signin" action="{{ path("fos_user_security_check") }}" method="post">

        <h2>Se connecter</h2>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

        <label for="username" class="sr-only">{{ 'security.login.username'|trans }}</label>
        <input type="text" class="form-control" id="username" name="_username" placeholder="{{ 'security.login.username'|trans }}" value="{{ last_username }}" required="required" />

        <label for="password" class="sr-only">{{ 'security.login.password'|trans }}</label>
        <input class="form-control" type="password" id="password" name="_password" placeholder="{{ 'security.login.password'|trans }}" required="required" />

        <div class="checkbox">
            <label>
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
            </label>
        </div>

        <input class="btn btn-lg btn-primary btn-block" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
    </form>


{% endblock body %}